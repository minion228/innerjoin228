<Window x:Class="InnerJoin228.AddOrEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InnerJoin228"
        mc:Ignorable="d"
        Title="Изменение" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="286*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Обновить" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Click="Button_Click"/>
        <TextBox x:Name="tbxLogin" Grid.Column="1" HorizontalAlignment="Center" Margin="0,46,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" FontSize="20"/>
        <TextBox x:Name="tbxPassword" Grid.Column="1" HorizontalAlignment="Center" Margin="0,46,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="196" FontSize="20"/>
        <ComboBox x:Name="cmxRole" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="196" FontSize="20"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="50,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontSize="20" Width="76"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="50,10,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontSize="20" Width="93"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="50,90,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Роль" VerticalAlignment="Top" FontSize="20" Grid.RowSpan="2" Width="59"/>

    </Grid>
</Window>
