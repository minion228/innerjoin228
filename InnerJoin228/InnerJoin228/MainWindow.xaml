<Window x:Class="InnerJoin228.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InnerJoin228"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="286*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="81*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Войти" HorizontalAlignment="Left" Margin="84,0,0,0" Grid.Row="4" VerticalAlignment="Center" Height="42" Width="142" FontSize="20" Click="Button_Click"/>
        <TextBox x:Name="tbxLogin" Grid.Column="1" HorizontalAlignment="Left" Margin="40,46,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" FontSize="20"/>
        <PasswordBox x:Name="tbxPassword" Grid.Column="1" HorizontalAlignment="Left" Margin="40,46,0,0" Grid.Row="3" VerticalAlignment="Top" Width="229" FontSize="20"/>
    </Grid>
</Window>
