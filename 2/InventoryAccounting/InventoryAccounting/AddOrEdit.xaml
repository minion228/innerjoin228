<Window x:Class="InventoryAccounting.AddOrEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryAccounting"
        mc:Ignorable="d"
        Title="AddOrEdit" Height="600" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="203*" />
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="49*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ComboBox x:Name="cmxItem" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="183" FontSize="20"/>
        <DatePicker x:Name="date" Grid.Column="2" HorizontalAlignment="Left" Margin="10,39,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="20" Width="188"/>
        <TextBox x:Name="tbxAmount" Grid.Column="2" HorizontalAlignment="Left" Margin="10,46,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" FontSize="20"/>
        <ComboBox  x:Name="cmxWorker" Grid.Column="1" HorizontalAlignment="Center" Margin="0,44,0,0" Grid.Row="3" VerticalAlignment="Top" Width="183" FontSize="20"/>
        <Button Grid.Column="1" Content="Сохранить" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="2" Height="47" Width="160" Click="Button_Click"/>
    </Grid>
</Window>
